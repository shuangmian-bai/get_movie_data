<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 数据源配置 -->
    <datasources>
        <!-- 每个数据源配置 -->
        <datasource id="test_demo" class="org.example.get_movie_data.service.DataSourceManager$DefaultMovieService">
            <name>测试数据源</name>
            <description>测试数据源</description>
        </datasource>
        <datasource id="custom1" class="com.example.custom.CustomMovieService">
            <name>自定义数据源1</name>
            <description>第一个自定义电影数据源实现</description>
        </datasource>
        <datasource id="custom2" class="com.example.custom2.SecondaryMovieService">
            <name>自定义数据源2</name>
            <description>第二个自定义电影数据源实现</description>
        </datasource>
    </datasources>

    <!-- URL映射配置 -->
    <urlMappings>
        <!-- 每个URL映射到特定的数据源 -->
        <urlMapping baseUrl="https://custom1.example.com/" datasource="custom1"/>
        <urlMapping baseUrl="https://custom2.example.com/" datasource="custom2"/>
        <urlMapping baseUrl="*" datasource="test_demo"/>
    </urlMappings>
</configuration>