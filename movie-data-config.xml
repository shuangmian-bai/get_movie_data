<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 数据源配置 -->
    <datasources>
        <!-- 每个数据源配置 -->
        <datasource id="test_demo" class="org.example.get_movie_data.service.impl.MovieServiceImpl">
            <name>测试数据源</name>
            <description>测试数据源</description>
        </datasource>
        <datasource id="custom" class="com.example.custom.CustomMovieService">
            <name>自定义数据源</name>
            <description>自定义电影数据源实现</description>
        </datasource>
    </datasources>

    <!-- URL映射配置 -->
    <urlMappings>
        <!-- 每个URL映射到特定的数据源 -->
        <urlMapping baseUrl="https://custom.example.com/" datasource="custom"/>
        <urlMapping baseUrl="*" datasource="test_demo"/>
    </urlMappings>
</configuration>