<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<configuration>
    <datasources>
        <datasource class="org.example.get_movie_data.datasource.YunyMovieService" id="yuny">
            <name>云云TV数据源</name>
            <description>从云云TV网站获取电影数据</description>
        </datasource>
        <datasource class="org.example.get_movie_data.datasource.InternalMovieService" id="internal">
            <name>内部数据源</name>
            <description>直接在主项目中定义的数据源示例</description>
        </datasource>
        <datasource class="org.example.get_movie_data.datasource.BfzyMovieService" id="bfzy">
            <name>暴风影音数据源</name>
            <description>从暴风影音网站获取电影数据</description>
        </datasource>
        <datasource class="org.example.get_movie_data.datasource.ChabeiguMovieService" id="chabeigu">
            <name>茶杯狐数据源</name>
            <description>从茶杯狐网站获取电影数据</description>
        </datasource>
    </datasources>
    <urlMappings>
        <urlMapping baseUrl="https://www.yuny.tv" datasource="yuny"/>
        <urlMapping baseUrl="https://internal.example.com" datasource="internal"/>
        <urlMapping baseUrl="https://bfzy.tv" datasource="bfzy"/>
        <urlMapping baseUrl="https://www.chabeigu.com" datasource="chabeigu"/>
        <urlMapping baseUrl="*" datasource="default"/>
    </urlMappings>
</configuration>
